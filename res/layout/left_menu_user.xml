<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_left_menu_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar" >

        <TextView
            android:id="@+id/user_back_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/mm_submenu_normal_right"
            android:gravity="left|center_vertical"
            android:onClick="bakcToMenu"
            android:text="功能"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/user_default_background" />

        <com.zhy.component.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_launcher"
            app:border_color="#FF000000"
            app:border_width="2dp" />
        
    </LinearLayout>

</LinearLayout>